<%- include("templates/header") %>
<section style="background-color: #eee;">
  <div class="container py-5">
      <div class="row">
          <div class="col-lg-4">
              <!-- Profile Picture and User Info -->
              <div class="card mb-4">
                  <div class="card-body text-center">
                      <img src="<%= profilepic || 'https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp' %>" alt="avatar" class="rounded-circle img-fluid" style="width: 150px;">
                      <h5 class="my-3"><%= username %></h5>
                      <p class="text-muted mb-1"><%= title || 'No Title' %></p>
                      <div class="d-flex justify-content-center mb-2">
                          <a href="/host"><button type="button" class="btn btn-primary">Host</button></a>
                          <a href="/join"><button type="button" class="btn btn-outline-primary ms-1">Join Book Club</button></a>
                      </div>
                  </div>
              </div>
              <!-- Genres Section -->
              <div class="card mb-4 mb-lg-0">
                  <div class="card-body p-0">
                      <ul class="list-group list-group-flush rounded-3">
                          <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                              <i class="fas fa-globe fa-lg text-warning"></i>
                              <p class="mb-0 fw-bold">Genres</p>
                          </li>
                          <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                              <div class="d-flex flex-wrap gap-2">
                                  <% if (genres && genres.length > 0) { %>
                                      <% genres.forEach(function(genre, index) { %>
                                          <button type="button" class="btn btn-outline-primary fs-6"><%= genre %></button>
                                      <% }); %>
                                  <% } else { %>
                                      <button type="button" class="btn btn-outline-secondary" disabled>No genres available</button>
                                      <button type="button" class="btn btn-outline-primary" onclick="window.location.href='/add-genres'">Add Genres</button>
                                  <% } %>
                              </div>
                          </li>
                      </ul>
                  </div>
              </div>
          </div>

          <div class="col-lg-8">
              <!-- Profile Info -->
              <div class="card mb-4">
                  <div class="card-body">
                      <div class="row">
                          <div class="col-sm-3">
                              <p class="mb-0">Full Name</p>
                          </div>
                          <div class="col-sm-9">
                              <p class="mb-0"><%= fullname || 'Full Name' %></p>
                          </div>
                      </div>
                      <hr>
                      <div class="row">
                          <div class="col-sm-3">
                              <p class="mb-0">Email</p>
                          </div>
                          <div class="col-sm-9">
                              <p class="mb-0"><%= email %></p>
                          </div>
                      </div>
                      <hr>
                      <div class="row">
                          <div class="col-sm-3">
                              <p class="mb-0">City</p>
                          </div>
                          <div class="col-sm-9">
                              <p class="mb-0"><%= city || 'CITY' %></p>
                          </div>
                      </div>
                      <hr>
                      <div class="row">
                          <div class="col-sm-3">
                              <p class="mb-0">Books Read</p>
                          </div>
                          <div class="col-sm-9">
                              <p class="mb-0"><%= booksread || 0 %></p>
                          </div>
                      </div>
                      <hr>
                      <div class="d-flex justify-content-center mb-2">
                          <a href="profilesetup"><button type="button" class="btn btn-primary">EDIT</button></a>
                      </div>
                  </div>
              </div>

              <!-- Favourite Book Section -->
              <div class="row">
                  <div class="col-md-6">
                      <div class="card mb-4 mb-md-0">
                          <div class="card-body">
                              <p class="mb-4"><span class="text-primary font-italic me-1 fs-4">Favourite Book</span></p>
                              <% if (favouritebook) { %>
                                  <p class="mb-1 fs-5 fw-bold">Title: <%= favouritebook.title || 'N/A' %></p>
                                  <p class="mb-1 fs-5">Author: <%= favouritebook.author || 'N/A' %></p>
                                  <p class="mb-1 fs-5">Description: <%= favouritebook.description || 'No Description Available' %></p>
                              <% } else { %>
                                  <p class="fs-5 text-muted">No favourite book information available.</p>
                              <% } %>
                          </div>
                      </div>
                  </div>

                  <!-- Currently Reading Section -->
                  <div class="col-md-6">
                      <div class="card mb-4 mb-md-0">
                          <div class="card-body">
                              <p class="mb-4"><span class="text-primary font-italic me-1 fs-4">Currently Reading</span></p>
                              <% if (reading) { %>
                                  <p class="mb-1 fs-5 fw-bold">Title: <%= reading.title || 'N/A' %></p>
                                  <p class="mb-1 fs-5">Author: <%= reading.author || 'N/A' %></p>
                                  <p class="mb-1 fs-5">Description: <%= reading.description || 'No Description Available' %></p>
                              <% } else { %>
                                  <p class="fs-5 text-muted">No currently reading information available.</p>
                              <% } %>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
      </div>
  </div>
</section>

    <%- include("templates/footer") %>